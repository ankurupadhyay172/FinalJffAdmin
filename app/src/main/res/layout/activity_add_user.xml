<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <include layout="@layout/toolbar_subcategory" />



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="98.3dp"
                    android:layout_height="98.3dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="23.3dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ic_launcher"
                    app:riv_border_color="#333333"
                    app:riv_border_width="0dip"
                    app:riv_corner_radius="10dp"
                    app:riv_mutate_background="true"
                    app:riv_oval="false"
                    app:riv_tile_mode="clamp" />

                <TextView
                    android:id="@+id/add_change"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="14dp"
                    android:fontFamily="@font/sf_pro_display_regular"
                    android:includeFontPadding="false"
                    android:text="Add/Change"
                    android:textColor="@color/green_15d1a4"
                    android:textSize="15sp" />
                <!--Inputtext layout code is here:-->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="33.3dp"
                    android:layout_marginStart="16.7dp"
                    android:layout_marginEnd="16.7dp">
                    <EditText

                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/ic_user_name"
                        android:drawablePadding="10dp"
                        android:ems="20"
                        android:fontFamily="@font/sf_pro_display_medium"
                        android:background="@drawable/edt_bg"
                        android:hint="Full Name"
                        android:inputType="textCapWords"
                        android:letterSpacing="0.033"
                        android:maxLength="20"
                        android:maxLines="1"
                        android:paddingLeft="10dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="20dp"
                        android:textColor="@color/black_25303c"
                        android:textColorHint="@color/grey_828990"
                        android:textSize="15sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!--Inputtext layout code is here:-->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40.3dp"
                    android:layout_marginEnd="16.7dp"
                    android:layout_marginStart="16.7dp">

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/ic_email"
                        android:paddingLeft="10dp"
                        android:background="@drawable/edt_bg"
                        android:drawablePadding="10dp"
                        android:ems="20"
                        android:fontFamily="@font/sf_pro_display_medium"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:letterSpacing="0.033"
                        android:maxLength="25"
                        android:maxLines="1"
                        android:paddingTop="12dp"
                        android:paddingBottom="20dp"
                        android:textColor="@color/black_25303c"
                        android:textColorHint="@color/grey_828990"
                        android:textSize="15sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="40.3dp"
                    android:layout_marginEnd="16.7dp"
                    android:layout_marginStart="16.7dp"
                    android:layout_height="wrap_content">
                    <!--Inputtext layout code is here:-->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:focusable="false"
                            android:id="@+id/mobile_no"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawableLeft="@drawable/ic_mobile2"
                            android:paddingLeft="10dp"
                            android:drawablePadding="10dp"
                            android:background="@drawable/edt_bg"
                            android:fontFamily="@font/sf_pro_display_medium"
                            android:hint="Mobile Number"
                            android:inputType="number"
                            android:letterSpacing="0.033"
                            android:maxLength="12"
                            android:maxLines="1"
                            android:paddingTop="12dp"
                            android:paddingBottom="20dp"
                            android:textColor="@color/black_25303c"
                            android:textColorHint="@color/grey_828990"
                            android:textSize="15sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Change"
                        android:textColor="@color/red_ff577f"
                        android:textSize="15sp"
                        android:layout_marginEnd="5dp"
                        android:fontFamily="@font/sf_pro_display_regular"
                        android:includeFontPadding="false"
                        android:layout_gravity="center|end"/>
                </FrameLayout>
            </LinearLayout>


            <ProgressBar
                android:visibility="gone"
                android:indeterminateTint="@color/white"
                android:id="@+id/btn_loading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16.7dp"
                android:layout_marginEnd="16.7dp"
                android:layout_marginBottom="36.3dp"
                android:background="@drawable/dark_green_rect"
                android:fontFamily="@font/sf_pro_display_semibold"
                android:includeFontPadding="false"
                android:text="Update"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="15sp" />
            <Button
                android:id="@+id/btnNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16.7dp"
                android:layout_marginEnd="16.7dp"
                android:layout_marginBottom="36.3dp"
                android:background="@drawable/dark_green_rect"
                android:fontFamily="@font/sf_pro_display_semibold"
                android:includeFontPadding="false"
                android:text="Submit"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="15sp" />



        </LinearLayout>


    </ScrollView>

</LinearLayout>