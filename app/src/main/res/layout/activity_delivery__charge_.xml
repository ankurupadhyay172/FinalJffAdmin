<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_sort_filter" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:clipToPadding="false">





            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.7sp"
                android:layout_marginTop="23.3dp"
                android:fontFamily="@font/robo_regular"
                android:gravity="center"
                android:text="Delivery Charge"
                android:textColor="@color/txt_color"
                android:textSize="13.3sp" />


            <EditText

                android:drawableLeft="@drawable/ic_rupee"
                android:id="@+id/delivery_charge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.7dp"
                android:layout_marginTop="6.7dp"
                android:layout_marginRight="16.7sp"
                android:background="@drawable/rect_gray_border"
                android:fontFamily="@font/robo_regular"
                android:hint=""
                android:inputType="number"
                android:paddingLeft="15dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:textColor="@color/txt_color"
                android:textColorHint="@color/txt_color"
                android:textSize="15sp" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.7sp"
                android:layout_marginTop="23.3dp"
                android:fontFamily="@font/robo_regular"
                android:gravity="center"
                android:text="Min Order"
                android:textColor="@color/txt_color"
                android:textSize="13.3sp" />


            <EditText

                android:drawableLeft="@drawable/ic_rupee"
                android:id="@+id/min_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.7dp"
                android:layout_marginTop="6.7dp"
                android:layout_marginRight="16.7sp"
                android:background="@drawable/rect_gray_border"
                android:fontFamily="@font/robo_regular"
                android:hint=""
                android:inputType="number"
                android:paddingLeft="15dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:textColor="@color/txt_color"
                android:textColorHint="@color/txt_color"
                android:textSize="15sp" />






























            <TextView

                android:layout_width="match_parent"
                android:layout_height="200dp"/>

        </LinearLayout>


    </ScrollView>
</LinearLayout>