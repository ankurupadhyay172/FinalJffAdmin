<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.HomeFragment">




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/rectangle_gray_search"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_pending"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle_green_search"
            android:fontFamily="@font/sf_pro_display_semibold"
            android:gravity="center"
            android:text="Pending"
            android:textColor="@color/white"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/txt_cooking"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle_gray_search"
            android:fontFamily="@font/sf_pro_display_semibold"
            android:gravity="center"
            android:text="Cooking"
            android:textColor="@color/black"
            android:textSize="14sp" />



        <TextView
            android:id="@+id/txt_ongoing"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle_gray_search"
            android:fontFamily="@font/sf_pro_display_semibold"
            android:gravity="center"
            android:text="Ongoing"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt_deliverd"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle_gray_search"
            android:fontFamily="@font/sf_pro_display_semibold"
            android:gravity="center"
            android:text="Delivered"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt_failed"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle_gray_search"
            android:fontFamily="@font/sf_pro_display_semibold"
            android:gravity="center"
            android:text="Failed"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </LinearLayout>

    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >


        <LinearLayout
            android:visibility="gone"
            android:id="@+id/li_empty"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="11dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Cart"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="160dp"
                android:src="@drawable/ic_empty_cart" />

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="22.5dp"
                android:fontFamily="@font/poppins_bold"
                android:text="No Orders"
                android:textColor="@color/txt_color"
                android:textSize="18sp" />

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/robo_regular"
                android:text="Add Your Favourite Items From Home"
                android:textColor="@color/txt_color"
                android:textAlignment="center"
                android:lineSpacingExtra="5dp"
                android:textSize="16sp" />

            <Button
                android:visibility="gone"
                android:id="@+id/shopping_cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="96dp"
                android:layout_marginRight="96dp"
                android:layout_marginTop="21.5dp"
                android:fontFamily="@font/sf_pro_display_semibold"
                android:text="Start_shopping"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>



        <androidx.recyclerview.widget.RecyclerView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:id="@+id/recyclerview2"
            android:paddingTop="15dp"
            android:clipToPadding="false"/>
        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>



</LinearLayout>