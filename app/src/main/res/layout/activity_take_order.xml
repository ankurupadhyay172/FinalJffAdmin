<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">




        <FrameLayout
            android:padding="10dp"
            android:background="@drawable/rect_blue_botom_cure"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:visibility="gone"
                    android:id="@+id/profile_image"
                    android:layout_width="28dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_launcher"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="1dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sfuidisplay_semibold"
                        android:text="Receive Order"
                        android:textColor="@color/white"
                        android:textSize="17sp" />

                    <TextView

                        android:id="@+id/mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sfuidisplay_regular"
                        android:text="Order from customer"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                    <EditText
                        android:focusable="false"
                        android:id="@+id/search"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/rect_white_cure"
                        android:drawableLeft="@drawable/ic_search"
                        android:drawablePadding="10dp"
                        android:hint="Search...."
                        android:inputType="text"
                        android:paddingLeft="19dp"
                        android:fontFamily="@font/sfuidisplay_regular"
                        android:paddingTop="14dp"
                        android:imeOptions="actionDone"
                        android:paddingBottom="14dp"
                        android:textColor="@color/lightblack"
                        android:textColorHint="@color/hintcolor"
                        android:textSize="15sp" />
                </LinearLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="11dp"
                    android:paddingTop="9dp"
                    android:paddingRight="11dp"
                    android:paddingBottom="9dp">
                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/take_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_barcode" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/sfuidisplay_medium"
                            android:text="Take Order"
                            android:textColor="@color/white"
                            android:textSize="10sp" />
                    </LinearLayout>

                </FrameLayout>



            </LinearLayout>

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="16dp"
                android:background="@drawable/circle_red"
                android:fontFamily="@font/sfuidisplay_medium"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </FrameLayout>




        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="20dp"
            android:id="@+id/recyclerview"
            android:layout_marginLeft="16.5dp"
            android:layout_marginRight="16.5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:clipToPadding="false"/>




    </LinearLayout>




    <LinearLayout
        android:id="@+id/li_cart"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#98000000"
        android:orientation="horizontal"
        android:paddingTop="13.7dp"
        >

        <ImageView

            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_burgur"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5.5dp"/>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18.1dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cart_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfpro_text_semibold"
                android:text="Cart 1 Item"
                android:textColor="@color/white"
                android:textSize="15.7sp" />

            <TextView
                android:visibility="gone"
                android:id="@+id/cart_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/sfpro_display_medium"
                android:letterSpacing="0.0525"
                android:lineSpacingExtra="2.5dp"
                android:text="â‚¹ "
                android:textColor="@color/white"
                android:textSize="10.8sp" />
        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="65dp"
            android:layout_marginRight="18.1dp"
            android:background="#ffffff" />

        <TextView

            android:id="@+id/view_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="13dp"
            android:fontFamily="@font/sfpro_text_semibold"
            android:text="VIEW CART"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15.7sp" />
    </LinearLayout>



</RelativeLayout>
