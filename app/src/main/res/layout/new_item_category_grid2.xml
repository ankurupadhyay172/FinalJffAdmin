<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="40dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="30dp"
    android:layout_marginLeft="10dp"
    android:padding="10dp"
    android:layout_marginRight="9.7dp">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            app:cardElevation="8dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:id="@+id/frame_layout"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                >

                <ImageView
                    android:transitionName="image_shared"
                    android:src="@drawable/slogo"
                    android:scaleType="fitXY"
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:id="@+id/fav"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_favorite_border_black_24dp"
                    android:layout_marginTop="11.7dp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="11.7dp"/>

                <ImageView
                    android:visibility="gone"
                    android:layout_width="147.3dp"
                    android:layout_height="147.3dp"
                    android:layout_gravity="center"

                    android:scaleType="centerCrop"
                    />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/customise"
                    android:textColor="@color/black"
                    android:padding="8dp"
                    android:text="CUSTOMISE"
                    android:drawableTint="@color/black"
                    android:background="@drawable/rectangle_gray_boxprofile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="11.3dp"
                    android:layout_gravity="bottom|end"
                    android:layout_marginEnd="11.7dp"/>


                <TextView
                    android:background="#33000000"
                    android:id="@+id/price"
                    android:padding="15dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/sf_pro_display_bold"
                    android:textSize="20sp"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="11.3dp"
                    android:layout_gravity="start|bottom"
                    android:layout_marginEnd="11.7dp"/>

            </FrameLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            app:cardElevation="12dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">








                <LinearLayout
                    android:layout_weight="10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_weight="7"
                        android:id="@+id/title2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/avenir_heavy"
                        android:text="NA"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="11dp"
                        android:layout_marginTop="3dp"
                        />


                    <FrameLayout
                        android:layout_marginTop="10dp"
                        android:layout_weight="3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView

                            android:visibility="visible"
                            android:layout_gravity="right"
                            android:layout_marginRight="10dp"
                            android:id="@+id/add_item_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rectangle_gray_border"
                            android:fontFamily="@font/sfpro_display_medium"
                            android:paddingLeft="25dp"
                            android:paddingTop="6dp"
                            android:paddingRight="25dp"
                            android:paddingBottom="8dp"
                            android:text="+ Add"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            />

                        <LinearLayout
                            android:layout_marginRight="10dp"
                            android:visibility="gone"
                            android:layout_gravity="right"
                            android:id="@+id/add_cart_linear"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rectangle_silver_border"
                            android:orientation="horizontal"
                            android:paddingTop="6dp"
                            android:paddingBottom="8dp"
                            >

                            <TextView
                                android:id="@+id/minus_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sfpro_display_medium"
                                android:paddingLeft="16dp"
                                android:paddingRight="16dp"
                                android:text="-"
                                android:textColor="@color/white"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/txt_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sfpro_display_medium"
                                android:text="1"
                                android:textColor="@color/white"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/plus_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sfpro_display_medium"
                                android:paddingLeft="16dp"
                                android:paddingRight="16dp"
                                android:text="+"
                                android:textColor="@color/white"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </FrameLayout>



                </LinearLayout>



                <TextView
                    android:visibility="gone"
                    android:maxLines="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="7dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text=""
                    android:textColor="@color/txt_color"
                    android:textSize="12sp" />

                <LinearLayout
                    android:weightSum="10"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5.3dp"
                    >

                    <TextView
                        android:visibility="gone"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="11dp"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/sf_pro_display_semibold"
                        android:text="₹ 200"
                        android:textColor="@color/txt_color"
                        android:textSize="12sp" />






                    <TextView
                        android:layout_weight="6"
                        android:id="@+id/desc"
                        android:layout_marginTop="3dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5.3dp"
                        android:fontFamily="@font/avenir_book"
                        android:text="NA"
                        android:textColor="@color/white"
                        android:layout_marginStart="4.3dp"
                        android:layout_gravity="center"
                        android:textSize="12sp" />













                    <TextView
                        android:visibility="gone"
                        android:fontFamily="@font/sf_pro_display_light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginStart="4.3dp"
                        android:layout_gravity="center"
                        android:textSize="11.7sp"

                        />

                    <TextView
                        android:visibility="gone"
                        android:fontFamily="@font/sfpro_display_regularitalic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Extra Large"
                        android:id="@+id/offer"
                        android:textStyle="italic"
                        android:layout_marginStart="4.3dp"
                        android:layout_gravity="center"
                        android:textSize="11.7sp"
                        android:textColor="@color/mybg"/>


                </LinearLayout>





                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.7dp"
                    android:orientation="horizontal">


                    <Spinner

                        android:id="@+id/size_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/sfpro_display_medium"
                        android:text="₹ 220"
                        android:textColor="#2546b0"
                        android:textSize="13.3sp" />

                    <Spinner
                        android:visibility="gone"

                        android:id="@+id/crust_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/sfpro_display_medium"
                        android:text="₹ 220"
                        android:textColor="#2546b0"
                        android:textSize="13.3sp" />


                    <FrameLayout

                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView

                            android:visibility="gone"
                            android:layout_gravity="right"
                            android:layout_marginRight="10dp"
                            android:id="@+id/add_item_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rectangle_gray_border"
                            android:fontFamily="@font/sfpro_display_medium"
                            android:paddingLeft="25dp"
                            android:paddingTop="6dp"
                            android:paddingRight="25dp"
                            android:paddingBottom="8dp"
                            android:text="+ Add"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            />

                        <LinearLayout
                            android:layout_marginRight="10dp"
                            android:visibility="gone"
                            android:layout_gravity="right"
                            android:id="@+id/add_cart_linear"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rectangle_silver_border"
                            android:orientation="horizontal"
                            android:paddingTop="6dp"
                            android:paddingBottom="8dp"
                            >

                            <TextView
                                android:id="@+id/minus_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sfpro_display_medium"
                                android:paddingLeft="16dp"
                                android:paddingRight="16dp"
                                android:text="-"
                                android:textColor="@color/white"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/txt_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sfpro_display_medium"
                                android:text="1"
                                android:textColor="@color/white"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/plus_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sfpro_display_medium"
                                android:paddingLeft="16dp"
                                android:paddingRight="16dp"
                                android:text="+"
                                android:textColor="@color/white"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </FrameLayout>



                    <TextView
                        android:layout_marginRight="10dp"
                        android:background="@drawable/rectangle_gray_border"
                        android:padding="6dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_bold"
                        android:gravity="center"

                        android:drawableEnd="@drawable/arrow"
                        android:textColor="#FFFFFF"
                        android:textSize="13.3sp"
                        android:id="@+id/size"
                        android:text="Size of pizza"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>





















            </LinearLayout>


        </androidx.cardview.widget.CardView>



    </LinearLayout>

</androidx.cardview.widget.CardView>